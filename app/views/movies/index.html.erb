<p style="color: green"><%= notice %></p>

<h1>Movies</h1>
<%= form_tag movies_path, :method => 'get' do %>
  <%= collection_select :movie, :rating, Movie.all.uniq{|movie| [movie.rating]}, :rating, :rating, prompt: true %>
  <%= submit_tag "search" %>
<% end %>

<div id="movies">
  <% @movies.each do |movie| %>
    <%= render movie %>
    <p>
      <%= link_to "Show this movie", movie %>
    </p>
  <% end %>
</div>

<%= link_to "New movie", new_movie_path %>
